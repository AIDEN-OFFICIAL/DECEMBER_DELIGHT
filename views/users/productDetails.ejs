    <script>
        // Select the main zoom image and thumbnail images
        const zoomImage = document.getElementById('zoom_01');
        const thumbnails = document.querySelectorAll('.thumbImage');
    
        // Function to zoom the image
        const zoomIn = (event) => {
            zoomImage.style.transform = 'scale(2)'; // Adjust the scale factor as needed
            zoomImage.style.transition = 'transform 0.2s ease'; // Add transition for smooth effect
        };
    
        const zoomOut = () => {
            zoomImage.style.transform = 'scale(1)'; // Reset the scale when not hovering
        };
    
        // Add event listeners for mouse over and out
        zoomImage.addEventListener('mouseover', zoomIn);
        zoomImage.addEventListener('mouseout', zoomOut);
    
        // Thumbnail click event to change the main image
        thumbnails.forEach(thumbnail => {
            thumbnail.addEventListener('click', function() {
                const newSrc = this.getAttribute('data-imgbigurl');
                zoomImage.src = newSrc; // Change the main image source
                zoomImage.setAttribute('data-zoom-image', newSrc); // Update data-zoom-image attribute
            });
        });
    </script>
     
    
