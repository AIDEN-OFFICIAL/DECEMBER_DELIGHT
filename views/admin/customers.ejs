<script>
        async function confirmation(productId) {        
    console.log(`Block button clicked for product ID: ${productId}`); // Debug log
    try {
        const response = await fetch(`/admin/blockCustomer?id=${productId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
        });

        if (!response.ok) {
            throw new Error('Network response was not ok ' + response.statusText);
        }
        
        const data = await response.json();
        
        if (data.status === true) {
            Swal.fire({
                icon: 'warning',
                title: 'Block User',
                text: data.message,
                showCancelButton: true,
                cancelButtonColor: '#d33',
                confirmButtonColor: '#3085d6',
                confirmButtonText: 'Yes, remove it!',
                timer: 5000,
                timerProgressBar: true
            }).then(() => {
                location.reload();
            });
        }
    } catch (error) {
        console.error("Error blocking customer:", error);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Failed to block customer. Please try again later.',
        });
    }
}

